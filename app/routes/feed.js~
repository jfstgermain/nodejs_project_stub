module.exports.registerRoutes = function(app, mongoose) {
	// Routes
	app.get('/', function(req, res) {
		res.render('index', {
			title: 'Express'
		});
	});
	app.get('/feed', function(req, res) {
		res.render('feed/index', {
			title: 'Your feeds'
		});
	});
	// feed route.
	app.post('/feed.:format?', function(req, res) {
		//
		res.render('feed', {
			title: 'A Title'
		});

	});
	// feed route.
	app.post('/feed/post_message', function(req, res) {
		var redisClient = app.redis.createClient();
		redisClient.publish('pubsub', req.body.txt_message);
		
		res.send(200);
		
		redisClient.quit();

	});
};
